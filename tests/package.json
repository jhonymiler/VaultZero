{
    "name": "identity-vault-tests",
    "version": "1.0.0",
    "description": "VaultZero Integrated Tests",
    "scripts": {
        "test": "jest",
        "test:e2e": "playwright test",
        "test:performance": "k6 run performance/load-test.js",
        "test:security": "npm run test:security:audit && npm run test:security:penetration",
        "test:security:audit": "npm audit && snyk test",
        "test:security:penetration": "zap-baseline.py -t http://localhost:3000",
        "test:integration": "jest --config jest.integration.config.js",
        "test:mobile": "detox test",
        "test:watch": "jest --watch",
        "coverage": "jest --coverage"
    },
    "dependencies": {
        "bip39": "^3.1.0",
        "crypto": "^1.0.1"
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "@playwright/test": "^1.35.0",
        "detox": "^20.7.0",
        "snyk": "^1.1188.0",
        "@types/jest": "^29.5.0",
        "supertest": "^6.3.0"
    }
}